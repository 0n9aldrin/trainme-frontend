<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/bg_login"
    tools:context=".components.profile.UpdateProfileActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/idLinear"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_content"
            android:background="@drawable/layout_bg"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
            <TextView
                android:padding="@dimen/paddingGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Update Photo Profile"
                android:textColor="@color/black"
                android:textSize="@dimen/textHeaderTitle"
                android:textStyle="normal" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/margin_content">

                <TextView
                    android:id="@+id/imageName"
                    android:background="@drawable/layout_bggrey"
                    android:padding="@dimen/paddingGeneral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="JPEG/PNG"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />
                <Button
                    android:id="@+id/uploadImg"
                    android:background="@drawable/uploadicon"
                    android:padding="@dimen/paddingGeneral"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/update"
            android:layout_width="250dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/bgbutton"
            android:text="@string/profile_update"
            android:textColor="@android:color/white" />


    </LinearLayout>

</ScrollView>